    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/client.exe",
            "args": ["DESKTOP-SHTRL87"],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal",
            "outputCapture": "std",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:/CodeBlocks/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Задать для варианта приложения дизассемблирования значение Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name": "Cilent",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/server.exe",
            "args": ["", ""],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal",
            "outputCapture": "std",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:/CodeBlocks/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Задать для варианта приложения дизассемблирования значение Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
    
}